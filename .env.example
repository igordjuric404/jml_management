# Frappe backend URL
NEXT_PUBLIC_FRAPPE_URL=http://localhost:8000

# Set to "true" to use mock data instead of Frappe API
NEXT_PUBLIC_USE_MOCK=true

# App branding
NEXT_PUBLIC_APP_NAME=JML Management

# Frappe API credentials (for server-side calls)
FRAPPE_API_KEY=
FRAPPE_API_SECRET=

# ── Microsoft 365 / Azure AD ────────────────────────────────
# Register an app in Azure AD (Entra ID) and grant these API permissions (Application type):
#   - User.Read.All
#   - AuditLog.Read.All
#   - Application.Read.All
#   - Directory.Read.All
#   - DelegatedPermissionGrant.ReadWrite.All
#   - User.RevokeSessions.All (optional, for revoking sign-in sessions)
# Then create a client secret and fill in the values below.
# When all three are set, remediation actions will enforce real Microsoft Graph API calls.
MICROSOFT_TENANT_ID=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# OpenRouter API key for AI chatbot
OPENROUTER_API_KEY=

# Resend API key for email notifications (https://resend.com)
RESEND_API_KEY=
# Sender email (must be verified in Resend, or use offboarding@resend.dev for testing)
NOTIFICATION_SENDER_EMAIL=offboarding@resend.dev
# Default recipient for finding alerts
NOTIFICATION_RECIPIENT_EMAIL=
